<h2 class="mb-4"><%= t("users.new.register") %></h2>
<% if no_signed_in? %>
  <div class='article'>
    <div class="card-body bg-white text-dark">
      <%= form_with model: @user do |f| %>
        <div class="mb-3 row">
          <%= f.label 'E-Mail', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-4">
            <%= f.email_field :email, required: true, minlegth: 7, placeholder: "example@email.com", class: "form-control" %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label "#{t("users.new.nickname")}", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-4">
            <%= f.text_field :nickname, required: true, minlegth: 5, placeholder: "Simplecode", class: "form-control" %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label "#{t("users.new.password")}", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-4">
            <%= f.password_field :password, required: true, minlegth: 12,  class: "form-control" %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label "#{t("users.new.confirm_password")}", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-4">
            <%= f.password_field :password_confirmation, required: true, minlegth: 12, class: "form-control" %>
          </div>
        </div>
        <%= f.submit "#{t("users.new.register_btn")}", class: "btn btn-primary" %>
        <div class="my-3">
          <a href="http://localhost:3000/session/new" onmouseup="MousePaint(event, '#ffc107', '#0d6efd')" onmousedown="MousePaint(event, '#ffc107', '#0d6efd')"><%= t("sessions.new.auth") %></a>
        </div>
      <% end %>
    </div>
  </div>
<% end %>